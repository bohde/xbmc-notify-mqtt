<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.notify-mqtt"
       name="Notify MQTT"
       version="0.1"
       provider-name="Josh Bohde">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
  <extension point="xbmc.service"
             library="addon.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Integrate with a MQTT broker.</summary>
    <description lang="en">Receive and display notifications from a MQTT broker.</description>
  </extension>
</addon>
